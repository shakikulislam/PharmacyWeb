
@using Pharmacy.Common
@model List<Pharmacy.Models.GenericName>

@{
    ViewBag.Title = "Index";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager !=null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="page-header">
    <h3 class="page-title">Generic Names</h3>
</div>

<div class="row">
    


    @* Add new Generic Name start here *@
    <div class="col-12 col-sm-12 col-md-5 col-lg-4 grid-margin stretch-card h-100">
        <div class="card">

            <div class="card-body">
                <h4 class="card-title">Add New Generic Name</h4>

                <form method="post">
                    <div class="form-group">
                        <label for="nameLabel">Generic Name</label>
                        <input type="text" name="Name" class="form-control" id="nameLabel" placeholder="exm: Paracetamol" required="">
                    </div>
                    
                    <div class="">
                        @if (ViewBag.SMsg != null)
                        {
                            <p class="text-info">@(ViewBag.SMsg)</p>
                        }
                        else if (ViewBag.FMsg != null)
                        {
                            <p class="text-danger">@(ViewBag.FMsg)</p>
                        }
                    </div>
                    
                    <button type="submit" class="btn btn-primary px-5">Add</button>
                </form>
            </div>

        </div>
    </div>
    @* Add new Generic Name end here *@
    


    @* Generic Name list start here *@
    <div class="col-12 col-sm-12 col-md-7 col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Generic Name List</h4>

                <div class="">
                    <table class="table table-bordered table-responsive">
                        <thead>
                        <tr>
                            <th> # </th>
                            <th style="width: 100%"> Name </th>
                            <th> ACTION </th>
                        </tr>
                        </thead>
                        <tbody>
                        

                        @{
                            var sl = 1;

                            foreach (var row in Model)
                            {
                                <tr>
                                    <td>
                                        @(sl++) 
                                    </td>
                                    <td>@row.Name</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Update", "GenericNames", new { row.Id }, new { @class = "btn btn-sm btn-primary" })
                                    </td>
                                </tr>
                            }

                        }

                        @*<tr>
                            <td> 1 </td>
                            <td> Seclo </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="">Update</a>
                                <a class="btn btn-sm btn-danger" href="">Delete</a>
                            </td>
                        </tr>*@
                        </tbody>
                    </table>
                    
                    @*pagination start here*@
                    

                    
                    @*<div class="mt-3">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>*@
                    
                    
                    <form method="post">
                        <div class="mt-3">
                            @if (pager.TotalPages > 0)
                            {
                                <ul class="pagination justify-content-center">
                                    
                                    @if (pager.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            @Html.ActionLink("First", "Index", "GenericNames", 1, new { @class = "page-link" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Previous", "Index", "GenericNames", @pager.CurrentPage-1, new { @class = "page-link" })
                                        </li>
                                    }

                                    @for (var pge = pager.StartPage; pge < pager.EndPage; pge++)
                                    {
                                        <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                            @Html.ActionLink(pge.ToString(), "Index", "GenericNames", pge, new {@class = "page-link"})
                                        </li>
                                    }

                                    @if (pager.CurrentPage < pager.TotalPages)
                                    {
                                        <li class="page-item">
                                            @Html.ActionLink("Next", "Index", "GenericNames", pager.CurrentPage+1, new {@class = "page-link"})
                                        </li>
                                        <li>
                                            @Html.ActionLink("Last", "Index", "GenericNames", pager.TotalPages, new {@class = "page-link"})
                                        </li>
                                    }

                                </ul>
                            }
                            

                        </div>
                    </form>
                   
                    
                    
                    

                    @*pagination end here *@
                </div>
            </div>
        </div>
    </div>
    @* Generic Name list end here *@
</div>