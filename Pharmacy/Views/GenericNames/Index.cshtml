
@using Pharmacy.Common
@model List<Pharmacy.Models.GenericName>

@{
    ViewBag.Title = "Index";

    Pager pager = new Pager();
    
    if (ViewBag.Pager !=null)
    {
        pager = ViewBag.Pager;
    }

}

@section Style
{

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <style>
        .pagination li a,
        .pagination li label,
        .pagination li label:hover,
        .pagination li select {
            background: transparent;
            color: #0090e7;
        }

        .pagination li a:hover,
        .pagination li select:hover {
            background: #0090e7;
            color: white;
        }

        .page-item.active .page-link {
            color: white;
            background: transparent;
            font-weight: bold;
        }

        input {
            color: red;
        }


    </style>


}


<div class="page-header">
    <h3 class="page-title">Generic Names</h3>
</div>

<div class="row">
    


    @* Add new Generic Name start here *@
    <div class="col-12 col-sm-12 col-md-5 col-lg-4 grid-margin stretch-card h-100">
        <div class="card">

            <div class="card-body">
                <h4 class="card-title">Add New Generic Name</h4>
                
                <form method="post">
                    <div class="form-group">
                        <label for="nameLabel">Generic Name</label>
                        <input type="text" name="Name" class="form-control" id="nameLabel" placeholder="exm: Paracetamol" required="">
                    </div>
                    
                    <div class="">
                        @if (ViewBag.SMsg != null)
                        {
                            <p class="text-info">@(ViewBag.SMsg)</p>
                        }
                        else if (ViewBag.FMsg != null)
                        {
                            <p class="text-danger">@(ViewBag.FMsg)</p>
                        }
                    </div>
                    
                    <button type="submit" class="btn btn-primary px-5">Add</button>
                </form>
            </div>

        </div>
    </div>
    @* Add new Generic Name end here *@
    


    @* Generic Name list start here *@
    <div class="col-12 col-sm-12 col-md-7 col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Generic Name List</h4>
                
                <div class="">
                    

                    @*Table start here*@

                    <table class="table table-bordered table-responsive">

                        <thead>
                        <tr>
                            <th> # </th>
                            <th style="width: 100%"> Name </th>
                            <th> ACTION </th>
                        </tr>
                        </thead>
                        <tbody>


                        @{
                            var sl = ViewBag.slNum;

                            foreach (var row in Model)
                            {
                                <tr>
                                    <td>
                                        @(sl++)
                                    </td>
                                    <td>@row.Name</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Update", "GenericNames", new {id = row.Id}, new {@class = "btn btn-sm btn-primary"})
                                    </td>
                                </tr>
                            }

                        }

                        @*<tr>
                            <td> 1 </td>
                            <td> Seclo </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="">Update</a>
                                <a class="btn btn-sm btn-danger" href="">Delete</a>
                            </td>
                        </tr>*@
                        </tbody>
                    </table>

                    @*Table end here*@

                    @*@Html.Partial("_Pagination", pager)*@
                    @{ Html.RenderPartial("_Pagination", pager); }

                </div>
            </div>
        </div>
    </div>
    @* Generic Name list end here *@
</div>

@section Script
{
    <script>



    </script>
}
