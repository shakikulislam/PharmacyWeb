    <div class="mt-3 w-100">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        @Html.ActionLink("First", "Index", "GenericNames", new { pg = 1 }, new { @class = "page-link border" })
                    </li>
                    <li>
                        @Html.ActionLink(" ", "Index", "GenericNames", new { pg = Model.CurrentPage - 1 }, new { @class = "page-link border bi bi-caret-left-fill" })
                    </li>
                }

                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                        @Html.ActionLink(pge.ToString(), "Index", "GenericNames", new { pg = pge }, new { @class = "page-link border" })
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        @Html.ActionLink(" ", "Index", "GenericNames", new { pg = Model.CurrentPage + 1 }, new { @class = "page-link border bi bi-caret-right-fill" })
                    </li>
                    <li>
                        @Html.ActionLink("Last", "Index", "GenericNames", new { pg = Model.TotalPages }, new { @class = "page-link border" })
                    </li>
                }

            </ul>
        }
    </div>

</div>